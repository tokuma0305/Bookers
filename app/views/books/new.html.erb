<div class="content">
<h1>Books</h1>
<table>
<tr>
	<th>Title</th>
	<th>Body</th>
	<th></th>
	<th></th>
	<th></th>
</tr>
<% @books.each do |book| %>
<tr>
	<td>
       <span><%= book.title %></span>
	</td>
	<td class="body">
		<span><%= book.body %></span>
	</td>

		  <td><%= link_to "Show", book_path(book.id) %></td>
		  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
		  <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
<tr>
<% end %>
</table>
<h1>New Book</h1>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
error
<% @book.errors.full_messages.each do |msg| %>
<%= msg %>
<% end %>
<% end %>
   <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>
    <div class="button">
    <%= f.submit "Create Book" %>
</div>
    <% end %>
</div>